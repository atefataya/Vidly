@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--this is a code block-->
@{
    <!--This is how to make a condition for a class-->
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

<!--This is how to render classes dynamically or any attribute-->
<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text> No one has rented this movie before.</text>
}
else
{
    <!--This is a list of customer-->
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
